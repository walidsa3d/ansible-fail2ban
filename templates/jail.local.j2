# Fail2Ban jail.local configuration

[DEFAULT]
ignoreip = {{ ban_ignoreip }}
bantime  = {{ bantime }}
findtime  = {{ findtime }}
maxretry = {{ maxretry }}
loglevel = {{ loglevel }}

{% for service in services %}
[{{ service.name }}]
enabled = {{ service.enabled }}
port = {{ service.port }}
filter = {{ service.filter }}
logpath = {{ service.logpath }}
maxretry = {{ service.maxretry }}
{% endfor %}
